<div class="container">
  <h1>New Game!</h1>
  <ul class="grid">
  <% @results.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
  </ul>
  <form action="/score" method="POST">
    <%= hidden_field_tag "time", "#{@init_time}" %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag "letters", "#{@results}" %>
    <input class="guess" type="text" name="guess" placeholder="Type the longest word you can find here">
    <input class="btn" type="submit">
  </form>
</div>

